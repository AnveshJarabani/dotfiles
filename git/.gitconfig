# Default to work identity
# NOTE: Actual values stored in pass
# Run 'git-profile work' or 'git-profile personal' to load from pass
[user]
	name = PLACEHOLDER
	email = PLACEHOLDER
	signingkey = PLACEHOLDER

[commit]
	gpgsign = true

# Conditional configs based on directory
[includeIf "gitdir:~/WELLSKY_REPOS/**"]
	path = ~/.gitconfig-work

[includeIf "gitdir:~/PERSONAL/**"]
	path = ~/.gitconfig-personal

[includeIf "gitdir:~/dotfiles/**"]
	path = ~/.gitconfig-personal

[includeIf "gitdir:~/.password-store/"]
	path = ~/.gitconfig-personal

[includeIf "gitdir:/root/.password-store/"]
	path = ~/.gitconfig-personal

# Conditional includes for work repos
[includeIf "gitdir:~/WELLSKY_REPOS/"]
path = ~/.gitconfig-wellsky
[includeIf "gitdir:/root/WELLSKY_REPOS/"]
path = ~/.gitconfig-wellsky
